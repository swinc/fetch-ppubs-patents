{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": false,
      "declaration": true,
      "esModuleInterop": false,
      "forceConsistentCasingInFileNames": true,
      "inlineSourceMap": true,
      "lib": ["es2022", "DOM"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUncheckedIndexedAccess": true,
      "outDir": "dist",
      "paths": {
        "src/*": ["./src/*"],
      },
      "rootDir": "./src",
      "strict": true,
      "target": "es2015"
    },
    "include": ["./src/**/*"]
  }
  