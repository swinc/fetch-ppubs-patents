{
    "compilerOptions": {
      "allowJs": false,
      "declaration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSourceMap": true,
      "lib": ["es2022", "DOM"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "paths": {
        "src/*": ["./src/*"],
      },
      "strict": true,
      "target": "es2022"
    },
    "include": ["src/**/*", "tests/**/*"]
  }
  