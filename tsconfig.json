{
    "compilerOptions": {
      "allowJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSourceMap": true,
      "lib": ["es2022", "DOM"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "lib",
      "paths": {
        "src/*": ["./src/*"],
      },
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "strict": true,
      "target": "es2020",
      "typeRoots" : ["node_modules/@types", "types"]
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }
  